{
    "name": "cerocloud",
    "version": "1.0.0",
    "description": "Sistema Integral de Ventas e Inventario de Escritorio - 100% Local y Gratuito",
    "main": "dist-electron/main/main.js",
    "author": {
        "name": "CeroCloud Team",
        "email": "contact@cerocloud.local"
    },
    "license": "SEE LICENSE IN LICENSE",
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/CeroCloud/CeroCloud-Desktop.git"
    },
    "publishConfig": {
        "access": "public"
    },
    "keywords": [
        "electron",
        "vite",
        "react",
        "typescript",
        "inventory",
        "pos",
        "sqlite"
    ],
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build && electron-builder",
        "build:win": "npm run build -- --win",
        "build:mac": "npm run build -- --mac",
        "build:linux": "npm run build -- --linux",
        "preview": "vite preview",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "type-check": "tsc --noEmit",
        "electron:dev": "concurrently \"npm run dev\" \"wait-on tcp:5173 && electron .\"",
        "electron:build": "vite build && electron-builder",
        "rebuild": "electron-rebuild -f -w better-sqlite3",
        "postinstall": "npm run rebuild"
    },
    "dependencies": {
        "@hookform/resolvers": "^5.2.2",
        "@tanstack/react-query": "^5.90.16",
        "@types/crypto-js": "^4.2.2",
        "better-sqlite3": "^9.4.0",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "cmdk": "^1.1.1",
        "crypto-js": "^4.2.0",
        "date-fns": "^4.1.0",
        "electron-store": "^11.0.2",
        "file-saver": "^2.0.5",
        "framer-motion": "^12.23.26",
        "html2canvas": "^1.4.1",
        "jspdf": "^4.0.0",
        "jszip": "^3.10.1",
        "lucide-react": "^0.344.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-hook-form": "^7.70.0",
        "react-icons": "^5.5.0",
        "react-router-dom": "^6.22.0",
        "recharts": "^3.6.0",
        "sonner": "^2.0.7",
        "tailwind-merge": "^2.6.0",
        "xlsx": "^0.18.5",
        "zod": "^4.3.5",
        "zustand": "^5.0.9"
    },
    "devDependencies": {
        "@electron/rebuild": "^4.0.2",
        "@types/better-sqlite3": "^7.6.9",
        "@types/file-saver": "^2.0.7",
        "@types/react": "^18.2.56",
        "@types/react-dom": "^18.2.19",
        "@typescript-eslint/eslint-plugin": "^7.0.2",
        "@typescript-eslint/parser": "^7.0.2",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.17",
        "concurrently": "^8.2.2",
        "electron": "^28.2.3",
        "electron-builder": "^24.13.3",
        "eslint": "^8.56.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.5",
        "postcss": "^8.4.35",
        "tailwindcss": "^3.4.1",
        "tailwindcss-animate": "^1.0.7",
        "typescript": "^5.3.3",
        "vite": "^5.1.4",
        "vite-plugin-electron": "^0.28.3",
        "vite-plugin-electron-renderer": "^0.14.5",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.cerocloud.local",
        "productName": "CeroCloud",
        "directories": {
            "output": "release",
            "buildResources": "electron/assets"
        },
        "publish": {
            "provider": "github",
            "releaseType": "release"
        },
        "files": [
            "dist/**/*",
            "dist-electron/**/*",
            "package.json"
        ],
        "fileAssociations": [
            {
                "ext": "cerobak",
                "name": "CeroCloud Backup",
                "description": "CeroCloud Backup File",
                "role": "Editor",
                "icon": "electron/assets/backup-icon.png"
            }
        ],
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "electron/assets/icon.png"
        },
        "mac": {
            "target": [
                "dmg"
            ],
            "icon": "electron/assets/icon.icns",
            "category": "public.app-category.business"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "icon": "electron/assets/icon.png",
            "category": "Office"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        }
    }
}