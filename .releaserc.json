{
    "branches": [
        "main",
        {
            "name": "develop",
            "prerelease": "beta",
            "channel": "beta"
        },
        {
            "name": "hotfix/*",
            "prerelease": "hotfix"
        }
    ],
    "plugins": [
        "@semantic-release/commit-analyzer",
        "@semantic-release/release-notes-generator",
        [
            "@semantic-release/changelog",
            {
                "changelogFile": "changelog.md"
            }
        ],
        [
            "@semantic-release/npm",
            {
                "npmPublish": false
            }
        ],
        [
            "@semantic-release/exec",
            {
                "prepareCmd": "npm run type-check && npx vite build && npx electron-builder --linux --config.asar=true"
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": [
                    "package.json",
                    "package-lock.json",
                    "changelog.md"
                ],
                "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
            }
        ],
        [
            "@semantic-release/github",
            {
                "assets": [
                    {
                        "path": "release/*.exe",
                        "label": "Windows Installer"
                    },
                    {
                        "path": "release/*.AppImage",
                        "label": "Linux AppImage"
                    },
                    {
                        "path": "release/*.deb",
                        "label": "Linux Deb"
                    },
                    {
                        "path": "release/latest.yml",
                        "label": "Auto-Update Manifest (Windows)"
                    },
                    {
                        "path": "release/latest-linux.yml",
                        "label": "Auto-Update Manifest (Linux)"
                    }
                ]
            }
        ]
    ]
}